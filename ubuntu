ARG OS

FROM ${OS}

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update \
 && apt-get upgrade -y

RUN apt-get install -y \
        build-essential \
        cmake \
        curl \
        doxygen \
        ghostscript \
        git \
        graphviz \
        hwloc \
        ncurses-term \
        sudo \
        vim \
        wget 

RUN apt-get purge --autoremove -y 
RUN rm -rf /var/lib/apt/lists/*
