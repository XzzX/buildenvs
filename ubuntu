FROM ubuntu:latest

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y \
        build-essential \
        ccache \
        cmake \
        curl \
        doxygen \
        ghostscript \
        git \
        graphviz \
        libboost-all-dev \
        libfftw3-dev \
        libopenmpi-dev \
        python3 \
        python3-matplotlib \
        python3-numpy \
        python3-pip \
        python3-scipy \
        software-properties-common \
        wget && \
    apt-get purge --autoremove -y && \
    rm -rf /var/lib/apt/lists/*
