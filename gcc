ARG OS
FROM ${OS}

ENV DEBIAN_FRONTEND=noninteractive

COPY *.sh .
RUN ./before_compiler_setup.sh

RUN apt-get update \ 
 && apt-get install -y \
        gcc-${COMPILER_VERSION} \
        g++-${COMPILER_VERSION}

ENV CC=gcc-${COMPILER_VERSION}
ENV CXX=g++-${COMPILER_VERSION}

RUN ./after_compiler_setup.sh
