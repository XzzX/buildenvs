FROM intel/oneapi-hpckit:latest

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get install -y \
        build-essential \
        ccache \
        cmake \
        curl \
        doxygen \
        ghostscript \
        git \
        graphviz \
        libboost-all-dev \
        libfftw3-dev \
        libhdf5-mpi-dev \
        libopenmpi-dev \
        ncurses-term \
        python3 \
        python3-matplotlib \
        python3-numpy \
        python3-pip \
        python3-scipy \
        software-properties-common \
        sudo \
        vim \
        wget

COPY kitware-archive.sh kitware-archive.sh
RUN ./kitware-archive.sh
RUN add-apt-repository ppa:git-core/ppa
RUN apt-get upgrade -y

RUN apt-get purge --autoremove -y
RUN rm -rf /var/lib/apt/lists/*

ENV OMP_PROC_BIND=spread
ENV OMP_PLACES=threads

ENV PATH=/usr/lib64/ccache:${PATH}${PATH:+:}/usr/lib64/openmpi/bin/
ENV LD_LIBRARY_PATH=/usr/lib64/openmpi/lib${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}
ENV PATH=${INTEL:+/opt/intel/oneapi/compiler/latest/linux/bin:/opt/intel/oneapi/compiler/latest/linux/bin/intel64}${PATH:+:}${PATH}
ENV LD_LIBRARY_PATH=${INTEL:+/opt/intel/oneapi/compiler/latest/linux/compiler/lib/intel64:/opt/intel/oneapi/mkl/latest/lib/intel64}${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}

ENV CC=icx
ENV CXX=icpx

RUN $CC --version
RUN $CXX --version
