FROM intel/oneapi-hpckit:latest

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get install -y \
        build-essential \
        ccache \
        cmake \
        curl \
        doxygen \
        ghostscript \
        git \
        graphviz \
        libboost-all-dev \
        libfftw3-dev \
        libopenmpi-dev \
        ncurses-term \
        python3 \
        python3-matplotlib \
        python3-numpy \
        python3-pip \
        python3-scipy \
        software-properties-common \
        sudo \
        vim \
        wget
RUN apt-get purge --autoremove -y
RUN rm -rf /var/lib/apt/lists/*

RUN export CC=icx
RUN export CXX=icpx
